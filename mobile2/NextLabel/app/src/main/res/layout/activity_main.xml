<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/background">

    <ImageView
        android:id="@+id/sample_logo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/sample_logo"
        android:contentDescription="logo image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp" />

    <TextView
        android:id="@+id/service_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NextLabel"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/sample_logo"
        app:layout_constraintStart_toEndOf="@id/sample_logo"
        app:layout_constraintBottom_toBottomOf="@id/sample_logo"
        android:layout_marginStart="10dp" />

    <ImageView
        android:id="@+id/btn_notification"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:src="@drawable/notification"
        android:contentDescription="notification button"
        app:layout_constraintTop_toTopOf="@id/sample_logo"
        app:layout_constraintBottom_toBottomOf="@id/sample_logo"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="30dp" />

</androidx.constraintlayout.widget.ConstraintLayout>