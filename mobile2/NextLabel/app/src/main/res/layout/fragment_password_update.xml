<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.user.PasswordUpdateFragment">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Password Update"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/padding_page"
        android:layout_marginStart="@dimen/padding_page"
        android:layout_marginEnd="@dimen/padding_page" />

    <!--  Password  -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/outlinedTextField_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:layout_constraintTop_toBottomOf="@id/textTitle"
        android:layout_marginTop="@dimen/margin_top_related"
        android:layout_marginStart="@dimen/padding_page"
        android:layout_marginEnd="@dimen/padding_page">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <!--  Password Confirmation  -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/outlinedTextField_password_confirmation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password Confirmation"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:layout_constraintTop_toBottomOf="@id/outlinedTextField_password"
        android:layout_marginTop="@dimen/margin_top_related"
        android:layout_marginStart="@dimen/padding_page"
        android:layout_marginEnd="@dimen/padding_page">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/password_confirmation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <!--  button: "login"  -->
    <Button
        android:id="@+id/containedButton_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update"
        app:layout_constraintTop_toBottomOf="@id/outlinedTextField_password_confirmation"
        android:layout_marginTop="@dimen/margin_top_related"
        android:layout_marginStart="@dimen/padding_page"
        android:layout_marginEnd="@dimen/padding_page" />

</androidx.constraintlayout.widget.ConstraintLayout>